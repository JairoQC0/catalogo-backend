datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
}

enum Role {
  USER
  ADMIN
}

model Catalog {
  id        Int       @id @default(autoincrement())
  name      String
  services  Service[]
  packages  Package[]  
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Service {
  id          Int        @id @default(autoincrement())
  name        String
  description String
  price       Float
  catalogId   Int
  catalog     Catalog    @relation(fields: [catalogId], references: [id], onDelete: Cascade)
  packages    Package[]  @relation("ServiceOnPackage")
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model Package {
  id          Int        @id @default(autoincrement())
  name        String
  description String
  price       Float
  catalogId   Int
  catalog     Catalog    @relation(fields: [catalogId], references: [id], onDelete: Cascade)
  services    Service[]  @relation("ServiceOnPackage") 
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}
